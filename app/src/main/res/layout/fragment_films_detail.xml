<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.films_detail.FilmsDetailFragment">

    <ImageView
        android:id="@+id/imageTittle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textTittle"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageTittle"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="TITTLE"
        android:layout_marginStart="12dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"/>
    <TextView
        android:id="@+id/titleDescription"
        app:layout_constraintTop_toBottomOf="@+id/textTittle"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Description"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/Description"
        app:layout_constraintTop_toBottomOf="@+id/titleDescription"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Description"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>